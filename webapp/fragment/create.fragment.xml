<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">

<Dialog title="Create a new Todo item!">
<VBox>

<Label text="Title"/>
<Input value="{mCreate>/title}"/>

<Label text="Description"/>
<Input value="{mCreate>/description}"/>

<Label text="Date"/>
<DatePicker value="{mCreate>targetDate}"/>

</VBox>

<beginButton>
<Button text="Create" press="saveTodo"/>
</beginButton>

</Dialog>
</core:FragmentDefinition>